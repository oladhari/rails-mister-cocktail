<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1><%= @cocktail.name %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <% if @cocktail.photo.present? %>
        <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
      <% end %>
    </div>
    <div class="col-sm-12 col-md-6">
      <h3>Ingredients</h3>
      <ul>
        <% @cocktail.ingredients.each do |ingredient|  %>
        <li><%= ingredient.name %> <%#= ingredient.dose.description %> </li>
        <%end%>
      </ul>
      <%= link_to "add ingredient", new_cocktail_dose_path(@cocktail) %>
    </div>
  </div>
</div>
